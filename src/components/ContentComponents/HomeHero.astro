---
  
  import TerminalPrefix from "@components/TerminalComponents/TerminalPrefix.astro";
  import ContactFormSmall from "@components/Forms/ContactFormSmall.astro";
  import DecoderText from "@components/AnimationComponents/DecoderText.astro";

---

<section class="w-full min-h-screen mb-12 bg-terminal-bg-primary">
  <div class="w-full h-full ">
    <div class="bento-grid">
      
      <!-- Cell 1: Main hero section -->
      <div class="div1 bento-cell">
        <h1 class="text-4xl md:text-5xl font-bold mb-4 text-terminal-bright font-uav-mono text-glow-strong">
          <span>
            <!-- <TerminalPrefix /> -->
            [Your Name]
          </span>
        </h1>
        <div class="text-xl md:text-2xl text-terminal-400 mb-8">
          Developer // Designer // Creator
        </div>
        <p class="text-xl md:text-xl text-terminal-400 font-kode">
          Passionate about creating modern web experiences with cutting-edge technology.
          <br/><br/>
          I specialize in Frontend Web Development - building responsive, interactive websites and applications using the latest frameworks and best practices. 
          <br/><br/>
          My expertise spans from simple landing pages to complex web applications, with a focus on user experience, performance optimization, and modern development workflows.
        </p>
      </div>
      
      <!-- Cell 2 -->
      <div class="div2 bento-cell">
        <h2>//Skillsets</h2>
        <ul class="list-disc list-outside pl-4">
          <li><strong>Primary Skillset</strong>: Frontend Web Development</li>
          <li><strong>Design Skills</strong>: UI/UX Design, Accessibility, Responsive Design, User Research</li>
          <li><strong>Additional Skills</strong>: SEO Optimization, Performance Tuning, API Integration</li>
        </ul>
      </div>
      
      <!-- Cell 3 -->
      <div class="div3 bento-cell">
        <h2>//Tech_Stack</h2>
        <ul class="list-disc list-outside pl-4">
          <li><strong>Standard</strong>: HTML/CSS/Javascript</li>
          <li><strong>Frameworks</strong>: Node.js, React, Next.js, Astro</li>
          <li><strong>Libraries</strong>: Tailwind CSS, Shadcn-UI</li>
          <li><strong>Environment</strong>: Cross-platform development (Windows, macOS, Linux)</li>
          <li><strong>Deployment</strong>: GitHub, Netlify, Vercel, Various Cloud Platforms</li>
        </ul>
      </div>
      
      <!-- Cell 4 -->
      <div class="div4 bento-cell">
        <h2>//Now_Playing</h2>
        <p class="text-terminal-400 font-kode">Listen to my coding playlist</p>
        <br/><br/>
        <div class="flex justify-center items-center">
          <span class="bg-terminal-400 text-terminal-bg-secondary px-4 py-2">[Coming Soon]</span>
        </div>
      </div>
      
      <!-- Cell 5 -->
      <div class="div5 bento-cell">
        <h2>//Latest_Projects</h2>
        <p class="text-terminal-400 font-kode mb-4">Check out my latest, coolest projects</p>
        <ul class="list-disc list-outside pl-4 space-y-6">
          <li>
            <a href="/projects/sample-project-1" class="bg-terminal-400 hover:bg-terminal-500 transition-colors text-terminal-bg-secondary px-4 py-2 font-kode font-bold">Sample Project One</a>
          </li>
          <li>
            <a href="/projects/sample-project-2" class="bg-terminal-400 hover:bg-terminal-500 transition-colors text-terminal-bg-secondary px-4 py-2 font-kode font-bold">Sample Project Two</a>
          </li>
          <li>
            <a href="/projects/sample-project-3" class="bg-terminal-400 hover:bg-terminal-500 transition-colors text-terminal-bg-secondary px-4 py-2 font-kode font-bold">Sample Project Three</a>
          </li>
          <li>
            <a href="/projects" class="bg-terminal-400 hover:bg-terminal-500 transition-colors text-terminal-bg-secondary px-4 py-2 font-kode font-bold">View All Projects</a>
          </li>
        </ul>
      </div>
      
      <!-- Cell 6 -->
      <div class="div6 bento-cell">
        <h2 class="">//Contact</h2>
        <ContactFormSmall /> 
      </div>

    </div>
  </div>
</section>

<style>
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    grid-template-rows: repeat(7, 1fr);
    gap: 0px;
    height: 100%;
    width: 100%;
  }
  
  .div1 {
    grid-column: span 3 / span 3;
    grid-row: span 4 / span 4;
  }
  
  .div2 {
    grid-column: span 2 / span 2;
    grid-row: span 2 / span 2;
  }
  
  .div3 {
    grid-column: span 2 / span 2;
    grid-row: span 2 / span 2;
    grid-column-start: 4;
  }
  
  .div4 {
    grid-row: span 3 / span 3;
    grid-row-start: 5;
  }
  
  .div5 {
    grid-column: span 2 / span 2;
    grid-row: span 3 / span 3;
    grid-column-start: 2;
    grid-row-start: 5;
  }
  
  .div6 {
    grid-column: span 2 / span 2;
    grid-row: span 3 / span 3;
    grid-column-start: 4;
    grid-row-start: 5;
  }
  
  /* Responsive adjustments for smaller screens */
  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
      grid-template-rows: auto;
    }
    
    .div1, .div2, .div3, .div4, .div5, .div6 {
      grid-column: 1;
      grid-row: auto;
    }
  }

  .bento-cell{
    @apply bg-terminal-bg-secondary p-6 shadow-md flex flex-col justify-start border border-terminal-300;
  }

  h2{
    @apply text-xl md:text-2xl font-semibold mb-2 text-terminal-500 font-uav-mono;
  }
  ul{
    @apply text-sm text-terminal-400 font-kode;
    ::marker{
      content: "> "
    }
  }
  strong{
    @apply text-terminal-bright;
  }
</style>
