---
import PostTags from '~/components/blog/Tags.astro';
import SocialShare from '~/components/common/SocialShare.astro';
import ProjectHeader from '~/components/ProjectComponents/ProjectHeader.astro';

import type { Post } from '~/types';

export interface Props {
  post: Post;
  url: string | URL;
}

const { post, url } = Astro.props;
---

<section class="py-8 sm:py-16 lg:py-20 mx-auto">
  <article class="max-w-screen-2xl mx-auto">
    
    <ProjectHeader 
      title={post.title}
      technologies={post.technologies}
      liveUrl={post.projectUrl}
      githubUrl={post.repoUrl}
      publishDate={post.publishDate}
      author={post.author?.toString()}
      readingTime={post.readingTime?.toString()}
      image={post.image}
      description={post.excerpt}
    />
    
    <div
      class=""
    >
      <slot />
    </div>
    <div class="mx-auto px-6 sm:px-6 mt-8 flex justify-between flex-col sm:flex-row">
      <PostTags tags={post.tags} class="mr-5 rtl:mr-0 rtl:ml-5" />
      <SocialShare url={url} text={post.title} class="mt-5 sm:mt-1 align-middle text-terminal-400" />
    </div>
  </article>
</section>

<style>
  h1{
    line-height: 1.2;
    text-align: center;
    text-wrap: balance;
  }
</style>

