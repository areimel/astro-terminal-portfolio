  <div class="flex min-h-screen">
    <SidebarNav 
      class="h-screen fixed top-0 left-0 w-[50px] md:w-[100px]"
    />
    <main 
      id="main-content"
      class="ml-[50px] md:ml-[100px] w-[calc(100%-50px)] md:w-[calc(100%-100px)]"
    >
      <slot />
    </main>
  </div>
  <!-- <slot name="header">
    <Header {...headerData} isSticky showToggleTheme />
  </slot> -->
  <slot name="footer">
    <Footer />
  </slot>
  <!-- <ThemeSwitcher /> -->
