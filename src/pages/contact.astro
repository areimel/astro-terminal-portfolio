---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactFormFull from '~/components/Forms/ContactFormFull.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <!-- Contact Form Section -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
    <div class="py-12">
      
      <!-- Grid Layout: Text | Form -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start border border-terminal-400 bg-terminal-bg-secondary shadow p-4 sm:p-6 lg:p-8 lg:divide-x lg:divide-terminal-400">
        
        <!-- Text Content Column -->
        <div class="space-y-6 md:pr-0 lg:pr-8">
          <div>
<!--             <h2 class="text-3xl font-bold font-uav-mono text-terminal-500 text-glow-strong mb-4 text-center text-balance"></h2> -->
            <p class="text-terminal-400 font-kode text-lg">
              Have a project in mind? Let's connect and discuss your ideas.
              <br/><br/>
              I specialize in modern web development, creating responsive applications and engaging user experiences using the latest technologies.
              <br/><br/>
              I aim to respond to messages promptly and look forward to hearing about your project.
            </p>
          </div>
          <a href="mailto:your.email@domain.com" class="text-terminal-400 hover:bg-terminal-400 hover:text-terminal-bg-primary transition-colors font-kode text-lg inline-flex items-center gap-2 px-2 py-1">
            <Icon name="mdi:email" class="w-6 h-6" />
            your.email@domain.com
          </a>
        </div>
        
        <!-- Form Column -->
        <div class="md:pl-0 lg:pl-8">
          <div>
            <h2 class="text-3xl font-bold font-uav-mono text-terminal-500 text-glow-strong mb-4 text-center text-balance">Contact Me</h2>
          </div>
          <ContactFormFull />
        </div>
        
      </div>

    </div>
  </div>

  
</Layout>
